APP_ENV=production
APP_DEBUG=false
APP_KEY={{ pterodactyl_app_key }}
APP_THEME=pterodactyl
APP_TIMEZONE=UTC
APP_CLEAR_TASKLOG=720
APP_DELETE_MINUTES=10
APP_ENVIRONMENT_ONLY=false
LOG_CHANNEL=daily
APP_LOCALE=en
APP_URL=http://{{ pterodactyl_name }}

DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE={{ pterodactyl_db.database }}
DB_USERNAME={{ pterodactyl_db.username }}
DB_PASSWORD={{ pterodactyl_db.password }}

SESSION_DRIVER=redis
CACHE_DRIVER=redis

HASHIDS_SALT=
HASHIDS_LENGTH=8

MAIL_DRIVER=smtp
MAIL_HOST={{ pterodactyl_mail.host }}
MAIL_PORT={{ pterodactyl_mail.port }}
MAIL_USERNAME={{ pterodactyl_mail.username }}
MAIL_PASSWORD={{ pterodactyl_mail.password }}
MAIL_ENCRYPTION=tls
MAIL_FROM=admin@terrashift.net
# You should set this to your domain to prevent it defaulting to 'localhost', causing
# mail servers such as Gmail to reject your mail.
#
# @see: https://github.com/pterodactyl/panel/pull/3110
SERVER_NAME={{ pterodactyl_name }}

QUEUE_HIGH=high
QUEUE_STANDARD=standard
QUEUE_LOW=low
