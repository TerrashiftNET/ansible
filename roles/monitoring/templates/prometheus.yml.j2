global:
  scrape_interval:     15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'

    scrape_interval: 5s
    scrape_timeout: 5s

    static_configs:
      - targets: ['localhost:9090']

  - job_name: node
    static_configs:
      - targets: [
{% for host in groups['all'] %}
        '{{ hostvars[host]['ansible_ens10'].ipv4.address }}:9100',
{% endfor %}
      ]
